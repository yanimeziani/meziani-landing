FROM python:3.11-slim

WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y \
    build-essential \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Install Poetry for dependency management
RUN curl -sSL https://install.python-poetry.org | python3 -

# Add Poetry to PATH
ENV PATH="${PATH}:/root/.local/bin"

# Copy pyproject.toml and other necessary files
COPY pyproject.toml ./
COPY README.md ./

# Disable virtualenv creation by Poetry and install dependencies
RUN poetry config virtualenvs.create false \
    && poetry install --no-interaction --no-ansi --without dev

# Copy the rest of the application
COPY . .

# Create a data directory for outputs
RUN mkdir -p /app/data
VOLUME /app/data

# Expose the API port
EXPOSE 8000

# Set environment variables to be used by crewAI
ENV ANTHROPIC_API_KEY=${ANTHROPIC_API_KEY}

# Run the application
CMD ["python", "-m", "media_org.main"]